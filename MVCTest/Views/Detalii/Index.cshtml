<div id="div_content">

</div>

@section dropdown_dep
        {
    <li class="dropdown">
        <a id="dd_departamente" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@ViewBag.Title<span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (string i in ViewBag.departamente)
                {if (i != ViewBag.Title )
                    {
                    <li><a href="@Url.Action("FindId", new { nume = i })">@i</a></li>
                    }
                }
        </ul>
    </li>
}

@section Scripts 
    {

    @Scripts.Render("~/bundles/jquery.ajax")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#div_content").load("/Detalii/Content/@ViewBag.Id", revalidation);
        })
        function updateName() {
            $("#dd_departamente").html($("#h_nume").html() + '<span class="caret"></span>');
        }
        function revalidation() {
            $("#div_content").removeData("validator");
            $("#div_content").removeData("unobtrusive");
            $.validator.unobtrusive.parse("#div_content");
        }
    </script>
    }
